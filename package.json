{
  "name": "npm-frontend-workflow",
  "version": "0.0.41",
  "description": "Front-end workflow for scss-css compilation and js minification",
  "main": "npm_init.js",
  "scripts": {
    "scss": "node-sass --output-style compressed -o static/css/ scss/",
    "autoprefixer": "postcss -u autoprefixer -r static/css/*.css",
    "compile": "babel --presets es2015 -d . scripts-es6/*.es",
    "lint": "eslint scripts-es6/*.es",
    "uglify": "uglifyjs scripts-es6/*.js -m -o static/js/app.js && uglifyjs scripts-es6/*.js -m -c -o static/js/app.min.js",
    "build:css": "npm run scss && npm run autoprefixer",
    "build:js": "npm run lint && npm run compile && npm run uglify",
    "watch:css": "onchange 'scss/*.scss' -- npm run build:css",
    "watch:js": "onchange 'scripts-es6/*.es' -- npm run build:js",
    "watch:all": "parallelshell 'npm run watch:css' 'npm run watch:js'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "scss:dev": "node-sass -o public/css/ scss/",
    "autoprefixer:dev": "postcss -u autoprefixer -r public/css/*.css",
    "uglify:dev": "uglifyjs scripts-es6/*.js -o public/js/app.js && uglifyjs scripts-es6/*.js -c -o public/js/app.min.js",
    "build:css:dev": "npm run scss:dev && npm run autoprefixer:dev",
    "build:js:dev": "npm run lint && npm run compile && npm run uglify:dev",
    "watch:css:dev": "onchange 'scss/*.scss' -- npm run build:css:dev",
    "watch:js:dev": "onchange 'scripts-es6/*.es' -- npm run build:js:dev",
    "watch:dev": "parallelshell 'npm run watch:css:dev' 'npm run watch:js:dev'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/webinative/npm-frontend-workflow"
  },
  "author": "Magesh Ravi <magesh@webinative.com>",
  "license": "BSD-2-Clause",
  "devDependencies": {
    "autoprefixer": "^6.4.1",
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "eslint": "^3.5.0",
    "eslint-config-standard": "^6.0.0",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-react": "^6.2.0",
    "eslint-plugin-standard": "^2.0.0",
    "node-sass": "~3.8.0",
    "onchange": "^3.0.2",
    "parallelshell": "^3.0.2",
    "postcss-cli": "^2.6.0",
    "uglify-js": "^2.7.3"
  },
  "dependencies": {
    "jquery": "^3.3.1"
  }
}
